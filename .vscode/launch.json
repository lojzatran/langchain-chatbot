{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Server (tsx)",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
      "program": "server.ts",
      "cwd": "${workspaceFolder}/apps/chatbot",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug vector-db-worker with Nx",
      "runtimeExecutable": "/Users/lamtran/.nvm/versions/node/v22.11.0/bin/node",
      "program": "${workspaceFolder}/node_modules/nx/bin/nx.js",
      "args": [
        "serve",
        "vector-db-worker",
        "--inspect=inspect",
        "--port=9229"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/apps/vector-db-worker/**/*.js",
        "!**/node_modules/**"
      ]
    }
  ]
}
